<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/flipkart</item>
        <item name="colorPrimaryDark">@color/flipkart</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="colored_checkbox" parent="AppTheme">
        <item name="colorAccent">@color/blue_button</item>
        <item name="android:textColorSecondary">@color/tab_indicator_grey</item>
    </style>

    <style name="BlueProgressBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/flipkart</item>
        <item name="colorPrimaryDark">@color/flipkart</item>
        <item name="colorAccent">@color/flipkart</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="paytmTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/flipkart</item>
        <item name="colorPrimaryDark">@color/light_gray_background_color</item>
        <item name="colorAccent">@color/flipkart</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue_button</item>
        <item name="android:textColorPrimary">@color/blue_button</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title." parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/intro_title_color</item>
        <item name="android:fontFamily">montserrat</item>
    </style>

</resources>
