<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.OnlineOrdersFragment"
    android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_manager_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/order_id_not_available_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nointernet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_not_found_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders not found !!"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/order_id_not_available_img"
        app:layout_constraintEnd_toEndOf="@+id/order_id_not_available_img"
        app:layout_constraintStart_toStartOf="@+id/order_id_not_available_img" />

</androidx.constraintlayout.widget.ConstraintLayout>